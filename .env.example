# 环境配置
NODE_ENV=development

# 服务器端口
PORT=3000

# Telegram Bot配置
BOT_TOKEN=your_telegram_bot_token_here
GAME_URL=http://localhost:3000

# 数据库配置
# SQLite (本地开发)
DB_PATH=./game_data.db

# PostgreSQL/Supabase (生产环境)
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/postgres
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# 加密密钥（32字符）
ENCRYPTION_KEY=your-32-character-encryption-key-here!

# API配置
API_TIMEOUT=10000

# 支付配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key

# USDT配置
USDT_WALLET_ADDRESS=your_usdt_wallet_address
USDT_PRIVATE_KEY=your_usdt_private_key

# 汇率API配置
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# 广告配置
ADMOB_PUBLISHER_ID=ca-pub-6402806742664594
ADMOB_BANNER_ID=ca-app-pub-6402806742664594/3631141010
ADMOB_REWARD_ID=ca-app-pub-6402806742664594/4856592778

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 安全配置
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# 邮件配置（用于通知）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# 监控配置
SENTRY_DSN=your_sentry_dsn_here

# Redis配置（可选，用于缓存）
REDIS_URL=redis://localhost:6379

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# 速率限制
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100